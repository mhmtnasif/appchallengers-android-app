<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <com.appchallengers.appchallengers.helpers.component.SFUITextRegularTextViewComponent
        android:id="@+id/country_select_fragment_char_edittext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/listview_circle_bg"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/edittext_text_color"
        android:textSize="25sp" />

    <com.appchallengers.appchallengers.helpers.component.SFUITextRegularTextViewComponent
        android:id="@+id/country_select_fragment_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="deneme"
        android:textColor="@color/edittext_text_color"
        android:textSize="17sp" />

</RelativeLayout>