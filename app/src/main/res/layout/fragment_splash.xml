<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appchallengers.appchallengers.fragments.login.SplashFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_logo"
        android:textColor="@color/white" />

    <com.appchallengers.appchallengers.helpers.component.SFUITextRegularTextViewComponent
        android:id="@+id/splash_fragment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/fragment_splash_copyright_2018"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/edittext_text_color" />

</RelativeLayout>
