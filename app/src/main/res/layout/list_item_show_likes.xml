<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/show_likes_fragment_user_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/listview_circle_bg"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textColor="@color/edittext_text_color"
        android:textSize="25sp" />

    <com.appchallengers.appchallengers.helpers.component.SFUITextRegularTextViewComponent
        android:id="@+id/show_likes_fragment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/show_likes_fragment_user_picture"
        android:text="example"
        android:textColor="@color/edittext_text_color"
        android:textSize="17sp" />

</RelativeLayout>